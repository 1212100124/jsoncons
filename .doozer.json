{ 
  "targets": {
    "macOS": {
      "buildenv": "osx",
      "builddeps": ["build-essential", "wget"],
      "environment": {
         "CXXFLAGS": "-std=c++11"
      },
      "buildcmd": [
      	"cd",
      	"wget https://github.com/Kitware/CMake/releases/download/v3.14.0/cmake-3.14.0.tar.gz",
      	"tar xfz cmake-3.14.0.tar.gz",
      	"cd cmake-3.14.0",
      	"./bootstrap",
      	"make -j8",
      	"cd",
        "./cmake-3.14.0/bin/cmake . -DBUILD_TESTS=ON",
      	"./cmake-3.14.0/bin/cmake --build . --target test_jsoncons",
        "cd tests",
        "./test_jsoncons;"
        ]
    },

 "raspbian-jessie": {
      "buildenv": "raspbian-jessie",
      "builddeps": ["build-essential", "wget"],
      "environment": {
         "CXXFLAGS": "-std=c++11"
      },
      "buildcmd": [
      	"uname -a",
        "cat /etc/os-release",
        "g++ --version",
      	"cd",
      	"wget https://github.com/Kitware/CMake/releases/download/v3.14.0/cmake-3.14.0.tar.gz",
      	"tar xfz cmake-3.14.0.tar.gz",
      	"cd cmake-3.14.0",
      	"./bootstrap",
      	"make -j8",
      	"cd",
        "./cmake-3.14.0/bin/cmake . -DBUILD_TESTS=ON",
      	"./cmake-3.14.0/bin/cmake --build . --target test_jsoncons",
        "cd tests",
        "./test_jsoncons;"
      ]
    },
    "xenial-armhf": {
      "buildenv": "xenial-armhf",
      "builddeps": ["build-essential", "wget"],
      "environment": {
         "CXXFLAGS": "-std=c++11"
      },
      "buildcmd": [
        "uname -a",
        "lsb_release -a",
        "g++ --version",
        "cd",
        "wget --no-check-certificate https://github.com/Kitware/CMake/releases/download/v3.14.0/cmake-3.14.0.tar.gz",
        "tar xfz cmake-3.14.0.tar.gz",
        "cd cmake-3.14.0",
        "./bootstrap",
      	"make -j8",
      	"cd",
        "./cmake-3.14.0/bin/cmake . -DBUILD_TESTS=ON",
      	"./cmake-3.14.0/bin/cmake --build . --target test_jsoncons",
        "cd tests",
        "./test_jsoncons;"
      ]
    },
    "fedora24-x86_64": {
      "buildenv": "fedora24-x86_64",
      "builddeps": ["cmake", "make", "gcc gcc-c++"],
      "environment": {
         "CXXFLAGS": "-std=c++11"
      },
      "buildcmd": [
      	"uname -a",
        "cat /etc/fedora-release",
        "g++ --version",
      	"cd",
        "cmake . -DBUILD_TESTS=ON",
      	"cmake --build . --target test_jsoncons",
        "cd tests",
        "./test_jsoncons;"
      ]
    },    "centos7-x86_64": {
      "buildenv": "centos7-x86_64",
      "builddeps": ["gcc-c++", "make", "wget"],
      "environment": {
         "CXXFLAGS": "-std=c++11"
      },
      "buildcmd": [
        "rpm -q centos-release",
        "g++ --version",
      	"cd",
      	"wget https://github.com/Kitware/CMake/releases/download/v3.14.0/cmake-3.14.0.tar.gz",
      	"tar xfz cmake-3.14.0.tar.gz",
      	"cd cmake-3.14.0",
      	"./bootstrap",
      	"make -j8",
      	"cd",
        "./cmake-3.14.0/bin/cmake . -DBUILD_TESTS=ON",
      	"./cmake-3.14.0/bin/cmake --build . --target test_jsoncons",
        "cd tests",
        "./test_jsoncons;"
        ]        
    }
  }
}
